<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/goToFirstBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1번 액티비티로 이동"
        />

    <Button
        android:id="@+id/goToSecondBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2번 액티비티로 이동"
        />

    <EditText
        android:id="@+id/contentEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전달할 내용 입력"
        android:singleLine="true"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/goToThirdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3번 액티비티로 이동"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="4번에서 입력한 내용"
        />

    <Button
        android:id="@+id/goToFourthBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4번 액티비티로 이동"
        />






</LinearLayout>